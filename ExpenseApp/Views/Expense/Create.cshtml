
@model ExpenseCreateViewModel


@*<br />
    <strong>This is the create page.</strong>*@

<form asp-controller="Expense" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="datetime-local" asp-for="Date" />

    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">€</span>

        </div>
        <input asp-for="Amount" type="text" class="form-control">
    </div>

    <button class="btn-success" type="submit">Create</button>

</form>




